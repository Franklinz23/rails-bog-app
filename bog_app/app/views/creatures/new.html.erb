<div id="form">

<%= form_for @creature do |f| %>
  Name:
</br>
  <%= f.text_field :name, required: true%>
</br>
  Description:
</br>
  <%= f.text_area :description, required: true%>
</br>
  <%= f.submit "Save Creature" %>
<% end %>

</div>

<%= form_for @user, url: users_path, html: { multipart: true } do |form| %>
  <%= form.file_field :avatar %>
<% end %>
